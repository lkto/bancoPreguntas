<?xml version='1.0' encoding='utf-8'?>
<widget id="io.ionic.starter" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Preguntas</name>
    <description>Banco de preguntas "Aviacion Colombia"</description>
    <author href="http://ember.sigtics.org/" email="ingeniero.ember.bejarano@gmail.com">
Jesson Ember Bejarano Mosquera
        </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="phonegap-version" value="cli-6.1.0" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="600" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="6000" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="img/android/iconos/ldpi-36.png" />
        <icon density="mdpi" src="img/android/iconos/mdpi-48.png" />
        <icon density="hdpi" src="img/android/iconos/hdpi-72.png" />
        <icon density="xhdpi" src="img/android/iconos/xhdpi-96.png" />
        <icon density="xxhdpi" src="img/android/iconos/xxhdpi-144.png" />
        <icon density="xxxhdpi" src="img/android/iconos/xxxhdpi-192.png" />
        <splash density="land-ldpi" src="img/android/splas/320-240-land-ldpi.png" />
        <splash density="land-mdpi" src="img/android/splas/480-320-mdpi.png" />
        <splash density="land-hdpi" src="img/android/splas/800-480-hdpi.png" />
        <splash density="land-xhdpi" src="img/android/splas/1080-720-xhdpi.png" />
        <splash density="land-xxhdpi" src="img/android/splas/1600-960-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="img/android/splas/1920-1280-xxxhdpi.png" />
        <splash density="port-ldpi" src="img/android/splas/240-320-ldpi.png" />
        <splash density="port-mdpi" src="img/android/splas/320-480-mdpi.png" />
        <splash density="port-hdpi" src="img/android/splas/480-800-hdpi.png" />
        <splash density="port-xhdpi" src="img/android/splas/720-1080-xhdpi.png" />
        <splash density="port-xxhdpi" src="img/android/splas/960-1600-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="img/android/splas/1280-1920-xxxhdpi.png" />
    </platform>
    
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-device" spec="^2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-ionic-webview" spec="^1.1.16" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
 
</widget>
